<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.sharetomail"
    android:versionCode="3"
    android:versionName="0.3alpha" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.sharetomail.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.sharetomail.AddModifyEmailAddressActivity"
            android:label="@string/title_activity_add_email_address"
            android:parentActivityName="org.sharetomail.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.sharetomail.MainActivity" />
        </activity>
        <activity
            android:name="org.sharetomail.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="org.sharetomail.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.sharetomail.MainActivity" />
        </activity>
        <activity android:theme="@style/Theme.AppCompat"
            android:name="org.sharetomail.EmailAppSelectorActivity"
            android:label="@string/title_activity_email_app_selector"
            android:parentActivityName="org.sharetomail.AddModifyEmailAddressActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.sharetomail.AddModifyEmailAddressActivity" />
        </activity>
    </application>

</manifest>