<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingsActivity" >

    <TextView
        android:id="@+id/aboutAppNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/autoUseDefaultEmailAddressCheckBox"
        android:text="@string/auto_use_default_email_address_setting_text" />

    <CheckBox
        android:id="@+id/autoUseDefaultEmailAddressCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/aboutAppNameTextView" />

    <EditText
        android:id="@+id/emailSubjectPrefixEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aboutAppNameTextView"
        android:layout_below="@+id/aboutAppNameTextView"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="text"
        tools:ignore="TextFields" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/aboutVersionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emailSubjectPrefixEditText"
        android:layout_below="@+id/aboutAppNameTextView"
        android:layout_marginTop="16dp"
        android:text="@string/subject_prefix_setting_text" />

</RelativeLayout>